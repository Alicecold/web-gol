@model string
@{ 
    ViewData["Title"] = "A Web Page";
}

<div>
    <div class="container-fluid wrapper" >
        <div class="row " id="head-text">
            <div class="col-xs-5 col-md-10">
                <h1>YAPP-WED Game of Life</h1>
            </div>
            <div class="col-xs-1 col-md-2">
                <img id="settings" class="button" src="~/images/playButton.svg" />
            </div>
        </div>
        
        <div class="row board">
            <div class="col-md-10">
                <div id="gridBoard">

                </div>
            </div>
            <div class="col-md-2 myCol">
                <div>
                    <img id="close" class="button" src="~/images/pauseButton.svg"/>
                </div>
                <div class="block">
                    <form id="grid-size" action="action_page.php" method="get">
                        <label for="Width">Width</label>
                        <input type="number" name="Width" value="20" id="width" class="wh-box">
                        <label for="Height">Height</label>
                        <input type="number" name="height" value="20" id="height" class="wh-box">
                    </form>
                </div>
                
                <div>
                    <h4>Speed:</h4>

                    <div class="speed">
                        <form id="formSpeed">
                            <input id="speedSlow" type="radio" name="speed" value="slow"/><label for="speedSlow">Slow</label>
                            <input id="speedNormal" type="radio" name="speed" value="normal" checked/><label for="speedNormal">Normal</label>
                            <input id="speedFast" type="radio" name="speed" value="fast"><label for="speedFast">Fast</label>
                        </form>
                    </div>
                 <button type="button" id="randomizeBtn">Randomize</button>
                        <div class="playPause">
                            <img class="button" id="playBtn" src="~/images/playButton.svg" />
                            <img class="button" id="pauseBtn" src="~/images/pauseButton.svg" />
                        </div>
                </div>
                <div>
                    <h4>Database</h4>
                        <button type="button">Save current game</button>
                        <button type="button">Load current game</button>
                </div>
            </div>

        </div>

    </div>
</div>
